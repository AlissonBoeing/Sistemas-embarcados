#include "UART2.h"

#define FOSC 16000000

UART2::UART2(uint32_t baud, UART2::DATABITS_t db, UART2::PARITY_t parity, UART2::STOPBITS_t sb) {

	unsigned int ubrr = (FOSC/16/baud-1);

	UBRR0H = (unsigned char)(ubrr>>8);
	UBRR0L = (unsigned char)ubrr;

	UCSR0B = (1<<RXEN0)|(1<<TXEN0);

	UCSR0C = db | parity | sb;

}

void UART2::put(uint8_t data) {

	//while (!( UCSR0A & (1<<UDRE0))) ;

	UDR0 = data;

}

void UART2::puts(const char * data) {

	int i = 0;

	while(data[i] != 0){
		put(data[i]);
		i++;
	}

}

uint8_t UART2::get() {

	//while ( !(UCSR0A & (1<<RXC0)));

	return UDR0;
}

bool UART2::has_data(){

	return _has_data == true;

}

static void UART2::rxc_isr_handler() {
	_rx_buffer = UDR0;
	_has_data = true;
}
static void UART2::tx_isr_handler() {
	UDR0 = _tx_buffer;
	UDRE0 = 0;
	reti();
}

ISR(USART0_RX_vect) {
	UART2::rxc_isr_handler();
}

ISR(USART0_UDRE_vect) {
	UART2::tx_isr_handler();
}



